        <div id = "inscription" class="formcontainer">
            <div class="main-block">
              <form action="/profil-docteur" method="POST">
                <h1>Modifier mon compte</h1>
                <fieldset>
                  <legend>
                    <h3>Détails du compte</h3>
                  </legend>
                    <div  class="personal-details">
                    <div>
                      <div><label>Nom*</label><input type="text" name="nom" placeholder="Votre nom" required></div>
                      <div><label>Prénom*</label><input type="text" name="prenom" placeholder="Votre prenom" required></div>
                      <div><label>Téléphone*</label><input type="text" name="phone" value="" placeholder="Votre numéro de téléphone" required></div>
                      <div><label>Adresse*</label><input type="text" placeholder="Votre adresse exemple : 1 Rue de Paris" name="adresse"></div>
                      <div><label>Ville*</label><input type="text" name="ville" placeholder="Votre ville" ></div>
                      <div>
                        <label>Pays*</label>  
                        <select>
                          <option value="France">France</option>
                          <option value="USA">Autre</option>
                        </select>
                      </div>
                    </div>
          
                    <div>
                      <div>
                        <label>Sexe*</label>
                        <div class="Genre">
                          <input type="radio" value="none" id="male" name="gender" required/>
                          <label for="male" class="radio">Homme</label>
                          <input type="radio" value="none" id="female" name="gender" required/>
                          <label for="female" class="radio">Femme</label>
                        </div>
                        <br>

                      </div>
                      <input type="date" id="SelecDate" min="1930-01-01" max="2003-01-01">
                    </div>
                    </div>
                  </div>
                </div>
              </fieldset>
              <button type="submit" value="post">Enregistrer</button>
            </form>  
                
        

